<?xml version="1.0"?>
<config>
    <modules>
        <Bookstore_Ajax>
            <version>0.1.0</version>
        </Bookstore_Ajax>
    </modules>
    <global>
        <blocks>
            <ajax>
                <class>Bookstore_Ajax_Block</class>
            </ajax>
        </blocks>
        <helpers>
            <ajax>
                <class>Bookstore_Ajax_Helper</class>
            </ajax>
        </helpers>
    </global>
    <frontend>
        <routers>
            <ajax>
                <use>standard</use>
                <args>
                    <module>Bookstore_Ajax</module>
                    <frontName>ajax</frontName>
                </args>
            </ajax>
        </routers>
        <layout>
            <updates>
                <ajax><file>ajax.xml</file></ajax>
            </updates>
        </layout>
    </frontend>
</config>